<Equipment>

    <Bind eqp="HAND_Katana">
        <to name="HAND" />
        <to name="HAND_Melee_Ammo" />
    </Bind>
    <Firearm name="HAND_Katana" inventoryBinding="SecondaryWeapon" category="melee" unlockCost="0"
        tooltip="@melee_icacrowbar_name"
        description="@melee_icacrowbar_desc"
        img="data/models/equipment/ica_crowbar_ui.dds"
        animationSet="melee"
    >
        <MobilityModifiers moveSpeedModifierPercent="-1" turnSpeedModifierPercent="0" />
        <ConcealmentModifier add="-2.25" />
        <RenderObject3D model="data/models/weapons/katana.khm" attachSlot="prop_back_rifle"
            skipGOSSAO="true"
            diffuseTex="data/models/weapons/katana.dds" />
        <Specular shininess="32" intensity="4.0" />
        <ModifiableParams
            changeInTime="500"
            changeOutTime="1000"
            efficiencyPercent="100"
            audibleSoundRadius="1.0"
            meleeDamageBonus="100"
            meleeReach="2.0"
            meleeAttackCooldown="100"
            meleeAttackDuration="500"
            meleeStunBonus="200"
            roundsPerMagazine="0"
            reloadTime="5"
            reloadEmptyTime="5"
            readyTime="500"
            guardTime="0"
            accuracyStart="100"
            accuracyEnd="10"
            accuracyStartDist="0"
            accuracyEndDist="5"
            suppressionScale="1.0"
        />

        <Params
            operationInfoText="@firearm_operation_melee_name"
        />

        <AttackTypes>
            <AttackType name="Rangers_PumpAimedFire" rangeMeters="9999" />
        </AttackTypes>

        <Sounds> <!-- max 4 variants for each action -->
            <!-- <Equip name="870br_eqp"/> -->
            <!-- <Unequip name="870br_neqp"/> -->
            <Fire name="melee_hit" />
        </Sounds>
    </Firearm>

</Equipment>