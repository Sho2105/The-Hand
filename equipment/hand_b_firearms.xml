<Equipment>
    <!-- Bot Guns -->
    <Bind eqp="hand_weapon_Spbot">
        <to name="hand_ammo_Spbot" />
        <to name="IronSights" />
    </Bind>
    <Firearm name="hand_weapon_Spbot"
             inventoryBinding="PrimaryWeapon"
             category="rifle"
             tooltip="@hand_weapon_Spbot_name"
             description="@hand_weapon_Spbot_desc"
             img="data/models/weapons/hand_weapon_Spbot_ui.dds"
             animationSet="rifle">
        <MobilityModifiers moveSpeedModifierPercent="-5"
                           turnSpeedModifierPercent="-1" />
        <RenderObject3D model="data/models/weapons/a_ar.khm"
                        attachSlot="prop_back_rifle"
                        skipGOSSAO="true"
                        diffuseTex="data/models/weapons/a_ar.dds" />
        <ModifiableParams numPellets="1"
                          roundsPerMagazine="40"
                          closedBolt="0"
                          cyclicReload="0"
                          reloadTime="2600"
                          reloadEmptyTime="3400"
                          changeInTime="1400"
                          changeOutTime="1400"
                          readyTime="400"
                          guardTime="200"
                          accuracyStart="400"
                          accuracyEnd="400"
                          accuracyStartDist="0"
                          accuracyEndDist="120" />
        <Params caliberInfoText="@firearm_caliber_556x45_name"
                operationInfoText="@firearm_operation_semi3rdburst_name"
                ejectingShellEntity="BulletCasingLarge"
                magazineEntity="spbot_mag"
                ai_rangeMin="2.0"
                ai_rangeOptimal="20.0"
                ai_rangeMax="40.0"
                ai_stopWhenShooting="true" />
        <AttackTypes>
            <AttackType name="Rangers_BurstFire"
                        rangeMeters="5" />
            <AttackType name="Rangers_RapidFireMed"
                        rangeMeters="15" />
            <AttackType name="Rangers_CarbineAimedFire"
                        rangeMeters="45" />
            <AttackType name="Rangers_CarbineAimedFireXX"
                        rangeMeters="9999" />
        </AttackTypes>
        <MuzzleFlash lightTemplate="ShotLightLarge"
                     tracerTemplate="Tracer_Rifle">
            <Flare particles="FX_MUZZLE_FLASH_RIFLE_01" />
            <Flare particles="FX_MUZZLE_FLASH_RIFLE_02" />
            <Flare particles="FX_MUZZLE_FLASH_RIFLE_03" />
            <Flare particles="FX_MUZZLE_FLASH_RIFLE_04" />
        </MuzzleFlash>
        <Sounds>
            <Equip name="rifle_eqp" />
            <Unequip name="rifle_neqp" />
            <Reload name="rifle_reld" />
            <ReloadEmpty name="rifle_reldempt" />
            <Fire name="spbot_fire" />
            <ShellDrop name="rifle_shell_drop" />
            <Empty name="gen_empty" />
        </Sounds>
    </Firearm>
    <Bind eqp="hand_weapon_Shbot">
        <to name="hand_ammo_Shbot"/>
        <to name="IronSights"/>
    </Bind>
    <Firearm name="hand_weapon_Shbot"
             inventoryBinding="PrimaryWeapon"
             category="lmg"
             tooltip="@hand_weapon_Shbot_name"
             description="@hand_weapon_Shbot_desc"
             img="data/models/weapons/hand_weapon_Shbot_ui.dds"
             animationSet="rifle">
        <MobilityModifiers moveSpeedModifierPercent="-8"
                           turnSpeedModifierPercent="-2" />
        <RenderObject3D model="data/models/weapons/a_hmg.khm"
                        attachSlot="prop_back_rifle"
                        skipGOSSAO="true"
                        diffuseTex="data/models/weapons/a_hmg.dds" />
        <ModifiableParams numPellets="1"
                          roundsPerMagazine="100"
                          closedBolt="0"
                          cyclicReload="1"
                          reloadTime="4000"
                          reloadEmptyTime="4800"
                          changeInTime="2000"
                          changeOutTime="2000"
                          readyTime="600"
                          guardTime="400"
                          accuracyStart="150"
                          accuracyEnd="150"
                          accuracyStartDist="0"
                          accuracyEndDist="80" />
        <Params caliberInfoText="@firearm_caliber_762x51_name"
                operationInfoText="@firearm_operation_fullauto_name"
                ejectingShellEntity="BulletCasingLarge"
                magazineEntity="shbot_mag"
                ai_rangeMin="1.0"
                ai_rangeOptimal="10.0"
                ai_rangeMax="30.0"
                ai_stopWhenShooting="true" />
        <AttackTypes>
            <AttackType name="Rangers_BurstFire"
                        rangeMeters="5" />
            <AttackType name="Rangers_RapidFireMed"
                        rangeMeters="15" />
            <AttackType name="Rangers_CarbineAimedFire"
                        rangeMeters="45" />
            <AttackType name="Rangers_CarbineAimedFireXX"
                        rangeMeters="9999" />
        </AttackTypes>
        <MuzzleFlash lightTemplate="ShotLightLarge"
                     tracerTemplate="Tracer_Rifle">
            <Flare particles="FX_MUZZLE_FLASH_RIFLE_01" />
            <Flare particles="FX_MUZZLE_FLASH_RIFLE_02" />
            <Flare particles="FX_MUZZLE_FLASH_RIFLE_03" />
            <Flare particles="FX_MUZZLE_FLASH_RIFLE_04" />
        </MuzzleFlash>
        <Sounds>
            <Equip name="rifle_eqp" />
            <Unequip name="rifle_neqp" />
            <Reload name="lmg_reld" />
            <ReloadEmpty name="lmg_reldempt" />
            <Fire name="shbot_fire" />
            <ShellDrop name="rifle_shell_drop" />
            <Empty name="gen_empty" />
        </Sounds>
    </Firearm>
    <!-- Shields -->
    <Shield name="hand_weapon_Shield1"
    inventoryBinding="PrimaryWeapon"
    unlockCost="0"
    unlockCostBH="0"
    category="shield"
    tooltip="@hand_weapon_Shield1_name"
    description="@hand_weapon_Shield1_desc"
    img="data/models/weapons/hand_weapon_Shield1_ui.dds"
    holdBone="shield"
    animationSet="shield">
        <MobilityModifiers moveSpeedModifierPercent="-25"
                   turnSpeedModifierPercent="-60" />
        <RenderObject3D model="data/models/weapons/hand_weapon_Shield1.khm"
                diffuseTex="data/models/weapons/hand_weapon_Shield1.dds"
                attachSlot="prop_back_rifle" />
        <ModifiableParams fovDegrees="70"
                  fovRangeMeters="999999"
                  fovRadiusMeters="0.5"
                  suppressionRecoveryAdd="20"
                  meleeSpeedAdd="-50" />
        <Params>
            <ProtectionArc degrees="110"
                   coveragePercent="95"
                   piercingProtectionLevel="80" />
            <FX particles="Hit_Metal_Shield" />
            <EquipmentModifier>
                <AddTo reloadTime="+1600"
               reloadEmptyTime="+1600"
               readyTime="+80"
               guardTime="+80"
               changeInTime="+250"
               changeOutTime="+250"
               accuracyStart="-30"
               accuracyEnd="-60" />
            </EquipmentModifier>
        </Params>
    </Shield>
    <Shield name="hand_weapon_Shield2"
    inventoryBinding="PrimaryWeapon"
    unlockCost="0"
    unlockCostBH="0"
    category="shield"
    tooltip="@hand_weapon_Shield2_name"
    description="@hand_weapon_Shield2_desc"
    img="data/models/weapons/hand_weapon_Shield2_ui.dds"
    holdBone="shield"
    animationSet="shield">
        <MobilityModifiers moveSpeedModifierPercent="-5"
                   turnSpeedModifierPercent="-40" />
        <RenderObject3D model="data/models/weapons/hand_weapon_Shield2.khm"
                diffuseTex="data/models/weapons/hand_weapon_Shield2.dds"
                attachSlot="prop_back_rifle" />
        <ModifiableParams fovDegrees="90"
                  fovRangeMeters="999999"
                  fovRadiusMeters="0.5"
                  suppressionRecoveryAdd="10"
                  meleeSpeedAdd="-30" />
        <Params>
            <ProtectionArc degrees="90"
                   coveragePercent="80"
                   piercingProtectionLevel="70" />
            <FX particles="Hit_Metal_Shield" />
            <EquipmentModifier>
                <AddTo reloadTime="+1800"
               reloadEmptyTime="+1800"
               readyTime="+90"
               guardTime="+90"
               changeInTime="+200"
               changeOutTime="+200"
               accuracyStart="-50"
               accuracyEnd="-80" />
            </EquipmentModifier>
        </Params>
    </Shield>
</Equipment>